<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Policy">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/policy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/policy_effective_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dateOfPolicy" />

        <TextView
            android:id="@+id/policy_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/discription" />

        <TextView
            android:id="@+id/information_collected_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/collectin"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/information_collected_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/collection_detail_l1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash" />

            <TextView
                android:id="@+id/collected_info_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/collection_detail_l2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash" />

            <TextView
                android:id="@+id/collected_info_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/collection_detail_l3" />
        </LinearLayout>

        <TextView
            android:id="@+id/information_use_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/information"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/information_use_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/information_l1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash" />

            <TextView
                android:id="@+id/use_info_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/information_l2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash" />

            <TextView
                android:id="@+id/use_info_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/information_l3" />
        </LinearLayout>

        <!-- Add more LinearLayouts and TextViews for additional purposes -->

        <TextView
            android:id="@+id/information_sharing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/information_sharing"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/information_sharing_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/information_sharing_l1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash" />

            <TextView
                android:id="@+id/sharing_info_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/information_sharing_l2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash" />

            <TextView
                android:id="@+id/sharing_info_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/information_sharing_l3" />
        </LinearLayout>

        <!-- Add more LinearLayouts and TextViews for additional sharing circumstances -->

        <TextView
            android:id="@+id/privacy_rights_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/user_rights"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/privacy_rights_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/user_rights_l1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash" />

            <TextView
                android:id="@+id/privacy_right_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_rights_l2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash" />

            <TextView
                android:id="@+id/privacy_right_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_rights_l3" />
        </LinearLayout>

        <!-- Add more LinearLayouts and TextViews for additional privacy rights -->

    </LinearLayout>

</ScrollView>

