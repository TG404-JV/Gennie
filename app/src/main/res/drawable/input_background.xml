<!-- input_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Background color -->
    <solid android:color="@color/input_prompt" /> <!-- Change this color to your desired background color -->

    <!-- Corner radius -->
    <corners android:radius="30dp" /> <!-- Adjust the radius to change the roundness of corners -->

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="@color/stoke_color" /> <!-- Use a color resource for the stroke color -->
</shape>
